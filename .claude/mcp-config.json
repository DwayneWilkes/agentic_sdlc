{
    "mcpServers": {
        "orchestrator": {
            "command": "$PWD/.venv/bin/python",
            "args": ["$PWD/scripts/orchestrator-mcp-server.py"]
        },
        "agent-memory": {
            "command": "$PWD/.venv/bin/python",
            "args": ["$PWD/scripts/agent-memory-server.py"]
        },
        "pdf-rag": {
            "command": "$PWD/.venv/bin/python",
            "args": ["$PWD/scripts/pdf-rag-server.py"]
        },
        "nats-chat": {
            "command": "node",
            "args": ["$PWD/nats-chat/dist/index.js"],
            "env": {
                "NATS_URL": "nats://localhost:4222"
            }
        }
    }
}
